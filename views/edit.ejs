<%- include('header.ejs') %>

<section class="edit">
    <h1>Edit task</h1>
     <form action="/edit" method="POST">
        <input type="hidden" name="id" value="<%= task.idtasks %>" />
        <label>Имя</label><br>
        <input name="name" value="<%= task.taskcontent %>"  class="field" /><br><br>
        <label>Возраст</label><br>
        <input name="date" type="date" min="1" max="110" value="<%= task.taskdeadline %>"  class="field" /><br><br>
        <input type="submit" value="Отправить" />
     </form>
     <a href="/">К списку пользователей</a>
   </section>
     
<%- include('footer.ejs') %>